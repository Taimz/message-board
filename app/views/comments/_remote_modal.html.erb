<%= turbo_frame_tag "remote_modal" do %>
  <div class="modal fade" id="newCommentModal" tabindex="-1" aria-labelledby="newCommentModalLabel"
       aria-hidden="true" data-controller="remote-modal"
       data-action="turbo:before-render@document->remote-modal#hideBeforeRender">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newCommentModalLabel">Add Comment</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="remote_modal_body">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
<% end %>